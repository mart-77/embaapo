<?xml version="1.0" encoding="UTF-8"?>
<zk>
    <variable-resolver>org.zkoss.zkplus.spring.DelegatingVariableResolver</variable-resolver>
    <listener>
        <listener-class>org.zkoss.zk.ui.util.Composition
            </listener-class>
    </listener>
    <scripting-language>
        <language-name>ruby</language-name>
        <language-class>org.zkoss.zk.scripting.impl.RubyScriptEngine</language-class>
    </scripting-language>
    <language-config>
        <language-name>zkoss</language-name>
        <language-class>org.zkoss.zk.scripting.impl.ZKScriptEngine</language-class>
    </language-config>
    <custom-attributes>
        <attribute>
            <name>org.zkoss.zk.ui.http.HttpSessionListener</name>
            <value-class>org.zkoss.zk.ui.http.HttpSessionListener</value-class>
        </attribute>
    </custom-attributes>
    <jsp-config>
        <taglib>
            <taglib-uri>/WEB-INF/tld/zk.tld</taglib-uri>
            <taglib-location>/WEB-INF/tld/zk.tld</taglib-location>
        </taglib>
    </jsp-config>
    <library-property>
        <name>org.zkoss.theme.preferred</name>
        <value>iceblue</value>
    </library-property>
    <library-property>
        <name>org.zkoss.zul.image.preload</name>
        <value>downward</value>
    </library-property>
    <library-property>
        <name>org.zkoss.util.logging.logLevel</name>
        <value>info</value>
    </library-property>
    <custom-attributes>
        <attribute>
            <name>org.zkoss.zul.Datebox.mold.default</name>
            <value>rounded</value>
        </attribute>
    </custom-attributes>
    <variable-resolver>org.zkoss.zkplus.spring.DelegatingVariableResolver</variable-resolver>
    <jsp-config>
        <taglib>
            <taglib-uri>/WEB-INF/tld/zk.tld</taglib-uri>
            <taglib-location>/WEB-INF/tld/zk.tld</taglib-location>
        </taglib>
    </jsp-config>
</zk>
<dependency>
    <groupId>org.mockito</groupId>
    <artifactId>mockito-core</artifactId>
    <version>3.12.4</version> <!-- Utiliza la versión más reciente disponible -->
    <scope>test</scope>
</dependency>
